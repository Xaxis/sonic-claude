# Sonic Claude Backend Configuration
# Copy this file to .env and customize as needed

# ============================================================================
# SERVER CONFIGURATION
# ============================================================================
HOST=0.0.0.0
PORT=8000
LOG_LEVEL=INFO
DEBUG=false
RELOAD=false

# ============================================================================
# SUPERCOLLIDER CONFIGURATION
# ============================================================================
SC_HOST=127.0.0.1
SC_SCSYNTH_PORT=57110
SC_SCLANG_PORT=57120
SC_PYTHON_PORT=57121

# ============================================================================
# STORAGE CONFIGURATION
# ============================================================================
DATA_DIR=data
SAMPLES_DIR=data/samples
SEQUENCES_DIR=data/sequences

# ============================================================================
# AUDIO CONFIGURATION
# ============================================================================
SAMPLE_RATE=48000
BUFFER_SIZE=64

# ============================================================================
# CORS CONFIGURATION
# ============================================================================
# Comma-separated list of allowed origins
# Use "*" for development, specific origins for production
CORS_ORIGINS=*
CORS_CREDENTIALS=true
CORS_METHODS=*
CORS_HEADERS=*

# ============================================================================
# AI CONFIGURATION
# ============================================================================
# Enable AI features (set to true to activate)
AI_ENABLED=false

# Anthropic API key for Claude (required if AI_ENABLED=true)
# Get your API key from: https://console.anthropic.com/
ANTHROPIC_API_KEY=

# AI model to use (default: claude-3-5-sonnet-20241022)
AI_MODEL=claude-3-5-sonnet-20241022

# Minimum seconds between LLM calls (prevents token waste)
AI_MIN_CALL_INTERVAL=2.0

# Seconds between autonomous analysis checks
AI_AUTONOMOUS_INTERVAL=10.0

# ============================================================================
# APPLICATION METADATA
# ============================================================================
APP_NAME=Sonic Claude Backend
APP_VERSION=1.0.0

