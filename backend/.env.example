# Sonic Claude Backend Configuration
# Copy this file to .env and customize as needed

# ============================================================================
# SERVER CONFIGURATION
# ============================================================================
HOST=0.0.0.0
PORT=8000
LOG_LEVEL=INFO
DEBUG=false
RELOAD=false

# ============================================================================
# SUPERCOLLIDER CONFIGURATION
# ============================================================================
SC_HOST=127.0.0.1
SC_SCSYNTH_PORT=57110
SC_SCLANG_PORT=57120
SC_PYTHON_PORT=57121

# ============================================================================
# STORAGE CONFIGURATION
# ============================================================================
DATA_DIR=data
SAMPLES_DIR=data/samples
SEQUENCES_DIR=data/sequences

# ============================================================================
# AUDIO CONFIGURATION
# ============================================================================
SAMPLE_RATE=48000
BUFFER_SIZE=64

# ============================================================================
# CORS CONFIGURATION
# ============================================================================
# Comma-separated list of allowed origins
# Use "*" for development, specific origins for production
CORS_ORIGINS=*
CORS_CREDENTIALS=true
CORS_METHODS=*
CORS_HEADERS=*

# ============================================================================
# AI CONFIGURATION
# ============================================================================
# Anthropic API key for Claude (REQUIRED for AI features)
# Get your API key from: https://console.anthropic.com/
# NOTE: Use double underscore (__) for nested config
AI__ANTHROPIC_API_KEY=

# AI model to use
AI__MODEL=claude-sonnet-4-5-20250929

# Minimum seconds between LLM calls (prevents token waste)
AI__MIN_CALL_INTERVAL=2.0

# ============================================================================
# APPLICATION METADATA
# ============================================================================
APP_NAME=Sonic Claude Backend
APP_VERSION=1.0.0

